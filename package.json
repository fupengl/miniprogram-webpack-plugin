{
  "name": "miniprogram-webpack-plugin",
  "version": "0.0.3",
  "description": "微信小程序 Webpack 插件",
  "scripts": {
    "start": "jest test --watch",
    "test": "jest test",
    "test:webpack": "cd test && webpack --mode=development",
    "test:webpack:ts": "cd test && TEST_EXT=ts webpack --mode=development",
    "prebuild": "rimraf ./lib && mkdirp ./lib",
    "build:watch": "babel src -o lib/index.js -w",
    "build": "babel src -o lib/index.js",
    "preversion": "yarn test && yarn build"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "*.md"
  ],
  "keywords": [
    "miniprogram",
    "weapp",
    "webpack",
    "webpack-plugin",
    "miniprogram-webpack",
    "wxapp-webpack"
  ],
  "author": "fupengl",
  "repository": "fupengl/miniprogram-webpack-plugin",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-es2015-parameters": "^6.24.1",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.22.0",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-babel": "5.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.24.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^2.0.0",
    "jest": "^23.6.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "fs-extra": "^7.0.0",
    "globby": "^8.0.1",
    "lodash": "^4.17.4",
    "webpack-sources": "^1.3.0"
  },
  "peerDependencies": {
    "webpack": "^2.2.0-rc || ^3"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
